<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>

    </style>



    <style name="CustomDropDownListView" parent="@style/android:Widget.Holo.DropDownItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#FF6600</item>
        <item name="android:background">#303030</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
        <item name="android:scrollbars">horizontal</item>
    </style>

    <!--<style name="CustomSherlockDropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">-->
        <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_customtab</item>-->
        <!--<item name="android:background">@drawable/spinner_background_ab_customtab</item>-->
    <!--</style>-->


    <style name="CustomProgressBarHorizontal" parent="@style/android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/abc_cab_background_bottom_holo_light</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


</resources>
