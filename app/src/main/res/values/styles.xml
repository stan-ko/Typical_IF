<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionMenuTextColor">@style/CustomDropDownListView</item>
    </style>


    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#575757</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:spinnerDropDownItemStyle">@style/CustomDropDownListView</item>
        <!-- Support library compatibility -->
        <!--<item name="background">@color/ab_background</item>-->
    </style>


    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ab_text_color</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="MyActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/ab_text_color</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <style name="CustomDropDownListView" parent="android:Widget.Holo.DropDownItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
    </style>


    <!--<style name="CustomSherlockDropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">-->
        <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_customtab</item>-->
        <!--<item name="android:background">@drawable/spinner_background_ab_customtab</item>-->
    <!--</style>-->


</resources>
