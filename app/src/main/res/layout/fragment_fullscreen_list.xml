<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff343434" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image_not_liked"
            android:layout_gravity="left|bottom"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image_comment"
            android:layout_gravity="left|bottom"
            android:src="@drawable/ic_photoview_comment"
            android:layout_alignTop="@+id/count_of_comments"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/count_of_comments"
            android:textColor="#ffffffff"
            android:textSize="35dp"
            android:layout_below="@+id/photoHeader"
            android:layout_toLeftOf="@+id/image_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/count_of_likes"
            android:textColor="#ffffffff"
            android:textSize="35dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/image_not_liked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoHeader"
            android:textColor="#ffeaeaea"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:text="8 лис 2014 в 22:16"
            android:layout_above="@+id/count_of_likes" />

        <CheckBox
            android:id="@+id/liked_or_not_liked_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:button="@drawable/like_or_not_liked_selector"
            android:clickable="false"
            android:enabled="false"
            android:layout_above="@+id/photoHeader"
            android:layout_alignRight="@+id/image_not_liked"
            android:layout_alignEnd="@+id/image_not_liked"
            android:visibility="gone" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FADE"
            android:id="@+id/button_fade"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relativeLayout"
        android:background="#00ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/counterOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/slash_between_numbers"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignTop="@+id/counterOfPhotos"
            android:layout_toRightOf="@+id/counterOfPhotos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="978"
            android:id="@+id/amountOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignTop="@+id/slash_between_numbers"
            android:layout_toRightOf="@+id/slash_between_numbers" />
    </RelativeLayout>


</RelativeLayout>