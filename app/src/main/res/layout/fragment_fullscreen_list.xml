<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff000000">

    <typical_if.android.ExtendedViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:weightSum="2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fullscreen_action_panel"
        android:background="@color/partly_transparent">

        <View android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1714"
            android:id="@+id/cb_photo_like"
            android:button="@drawable/like_or_not_liked_selector_vk_style"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffffff"


            android:layout_marginRight="60dp"
            android:layout_alignRight="@+id/strut" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="171"
            android:id="@+id/cb_photo_comment"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:layout_toEndOf="@+id/strut"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/strut"
            android:textColor="#ffffffff"
            android:layout_marginRight="-5dip"
            android:button="@drawable/ic_photo_comment"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/add_like"
            android:layout_toStartOf="@+id/strut"
            android:background="@drawable/action_with_photo_selector"
            android:layout_alignLeft="@+id/cb_photo_like"
            android:layout_alignStart="@+id/cb_photo_like"
            android:layout_alignRight="@+id/cb_photo_like"
            android:layout_alignEnd="@+id/cb_photo_like"
            android:clickable="true"
            android:layout_alignBottom="@+id/go_to_comments"
            android:layout_alignTop="@+id/go_to_comments"
            android:layout_marginLeft="-10dip"
            android:layout_marginRight="-8dp"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/go_to_comments"
            android:layout_toEndOf="@+id/cb_photo_comment"
            android:layout_toStartOf="@+id/strut"
            android:background="@drawable/action_with_photo_selector"
            android:clickable="true"
            android:layout_alignLeft="@+id/cb_photo_comment"
            android:layout_alignStart="@+id/cb_photo_comment"
            android:layout_alignRight="@+id/cb_photo_comment"
            android:layout_alignEnd="@+id/cb_photo_comment"
            android:layout_alignBottom="@+id/cb_photo_comment"
            android:layout_alignTop="@+id/cb_photo_comment"
            android:layout_marginLeft="-10dip"
            android:layout_marginRight="-8dp"
            android:layout_marginTop="-8dp"
            android:layout_marginBottom="-8dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/commentDataLayout"
        android:background="#00ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="-10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="22"
            android:id="@+id/counterOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/slash_between_numbers"
            android:layout_toStartOf="@+id/slash_between_numbers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/slash_between_numbers"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/amountOfPhotos"
            android:layout_toStartOf="@+id/amountOfPhotos"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:text="45"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photoHeader"
        android:textColor="#ffeaeaea"
        android:textSize="13sp"
        android:text="8 лис 2014 в 22:16"
        android:layout_above="@+id/fullscreen_action_panel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" />


</RelativeLayout>