<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur1" />








    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:weightSum="2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fullscreen_action_panel"
        android:background="@drawable/action_panel_gradient_shape">

        <View android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/count_of_comments"
            android:textColor="#ffffffff"
            android:textSize="35dp"
            android:text="45"
            android:layout_toEndOf="@+id/strut"
            android:layout_alignBaseline="@+id/count_of_likes"
            android:layout_alignBottom="@+id/count_of_likes"
            android:layout_toRightOf="@+id/strut"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/liked_or_not_liked_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:button="@drawable/like_or_not_liked_selector"
            android:clickable="false"
            android:enabled="false"
            android:layout_above="@+id/photoHeader"
            android:layout_alignRight="@+id/image_not_liked"
            android:layout_alignEnd="@+id/image_not_liked"
            android:visibility="gone" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:id="@+id/thin_line"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#6edefcff" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image_not_liked"
            android:layout_gravity="left|bottom"

            android:visibility="visible"
            android:layout_toStartOf="@+id/strut"
            android:layout_alignTop="@+id/count_of_comments"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/image_comment"
            android:layout_gravity="left|bottom"
            android:layout_alignRight="@+id/strut"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/strut" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:id="@+id/count_of_likes"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:text="23"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/liked_or_not_liked_checkbox"
            android:layout_toEndOf="@+id/liked_or_not_liked_checkbox"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="15dp"
            android:visibility="gone" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="171"
            android:id="@+id/cb_photo_like"
            android:button="@drawable/like_or_not_liked_selector"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:layout_toStartOf="@+id/image_comment"
            android:layout_toEndOf="@+id/liked_or_not_liked_checkbox"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_comment"
            android:textColor="#ffffffff"
            android:layout_marginRight="59dp"

            android:layout_marginLeft="10dip"
            android:paddingLeft="25dip"
            android:paddingRight="10dip"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/add_like"
            android:layout_toEndOf="@+id/liked_or_not_liked_checkbox"
            android:layout_toStartOf="@+id/strut"
            android:background="@drawable/action_with_photo_selector"
            android:layout_alignLeft="@+id/cb_photo_like"
            android:layout_alignStart="@+id/cb_photo_like"
            android:layout_alignRight="@+id/cb_photo_like"
            android:layout_alignEnd="@+id/cb_photo_like"
            android:layout_toRightOf="@+id/image_not_liked"
            android:clickable="true"
            android:layout_alignBottom="@+id/go_to_comments"
            android:layout_alignTop="@+id/go_to_comments"
            android:layout_marginLeft="-10dip" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="171"
            android:id="@+id/cb_photo_comment"
            android:button="@drawable/ic_photo_comment"
            android:checked="false"
            android:clickable="true"
            android:enabled="true"
            android:layout_toStartOf="@+id/count_of_comments"
            android:layout_toEndOf="@+id/strut"
            android:layout_marginLeft="65dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/strut"
            android:textColor="#ffffffff"
            android:paddingLeft="35dip"
            android:paddingRight="10dip"
            android:layout_marginRight="5dip" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/go_to_comments"
            android:layout_toEndOf="@+id/cb_photo_comment"
            android:layout_toStartOf="@+id/strut"
            android:background="@drawable/action_with_photo_selector"
            android:clickable="true"
            android:layout_alignLeft="@+id/cb_photo_comment"
            android:layout_alignStart="@+id/cb_photo_comment"
            android:layout_alignRight="@+id/cb_photo_comment"
            android:layout_alignEnd="@+id/cb_photo_comment"
            android:layout_alignBottom="@+id/cb_photo_comment"
            android:layout_alignTop="@+id/cb_photo_comment"
            android:layout_marginLeft="-10dip" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/commentDataLayout"
        android:background="#00ffffff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/counterOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:id="@+id/slash_between_numbers"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignTop="@+id/counterOfPhotos"
            android:layout_toRightOf="@+id/counterOfPhotos" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/amountOfPhotos"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:layout_alignTop="@+id/slash_between_numbers"
            android:layout_toRightOf="@+id/slash_between_numbers" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photoHeader"
        android:textColor="#ffeaeaea"
        android:textSize="20dp"
        android:text="8 лис 2014 в 22:16"
        android:layout_above="@+id/fullscreen_action_panel"
        android:layout_centerHorizontal="true" />


</RelativeLayout>