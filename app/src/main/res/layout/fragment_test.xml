<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".TestActivity$PlaceholderFragment"
        android:orientation="vertical">

        <Button
            android:id="@+id/users_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/users_get"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/friends_get"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/friends_get"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/captcha_force"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/captcha_force"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />


        <Button
            android:id="@+id/wall_post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/wall_post"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />

        <Button
            android:id="@+id/upload_photo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/upload_photo_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo_to_wall"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />

        <Button
            android:id="@+id/upload_several_photos_to_wall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_several_photos_to_wall"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/test_validation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_validation"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
        <Button
            android:id="@+id/getPhoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="getPhoto"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_gravity="right" />
    </LinearLayout>
</ScrollView>