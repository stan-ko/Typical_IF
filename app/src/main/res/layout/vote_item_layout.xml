<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APP_BACKGROUND">

    <RelativeLayout
        android:id="@+id/z"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/APP_BACKGROUND"

        android:visibility="visible">

        <TextView
            android:id="@+id/rate_in_answers"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="444"
            android:textColor="#8cffffff"
            android:layout_below="@+id/vote_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/vote_progress"

            android:progress="56"
        android:minHeight="20dip"
        android:maxHeight="20dip"
            android:layout_alignTop="@+id/rate_in_answers"
            android:layout_toRightOf="@+id/rate_in_answers"
            android:layout_toLeftOf="@+id/temp2"
            android:layout_toStartOf="@+id/temp2" />

        <TextView
            android:id="@+id/temp2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:textColor="#8cffffff"
            android:textSize="13dp"
            android:text="2.57%"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/vote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#ffffffff"
            android:visibility="visible"
            android:text="Stay alone"
            android:layout_alignBottom="@+id/temp2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/AddVoteLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <Button
            android:id="@+id/add_vote_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/vote_text2"
            android:layout_marginLeft="5dp"
            android:background="@drawable/vote_button_backround_shape"
            android:padding="5dp"
            android:text="@string/add_vote"
            android:textColor="#8cffffff"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/vote_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/add_vote_button"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/add_vote_button"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#b4ffffff"
            android:textSize="13dp" />
    </RelativeLayout>

</RelativeLayout>