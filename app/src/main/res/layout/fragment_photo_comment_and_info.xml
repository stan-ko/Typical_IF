<?xml version ="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffffff">


<ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listOfComments"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
    android:layout_above="@+id/field_of_message_for_comment"
    android:background="@drawable/image_header_state_selector" />




    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_of_message_for_comment"
        android:textColor="#ff000000"
        android:background="@drawable/message_text_shape"
        android:maxLines="5"
        android:minHeight="50dp"
        android:phoneNumber="false"
        android:selectAllOnFocus="false"
        android:paddingRight="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/buttonSendComment"
        android:layout_marginRight="2dp"
        android:hint="Ваше повідомлення"
        android:paddingLeft="15dp"
        android:visibility="visible" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Відпр."
        android:id="@+id/buttonSendComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/send_comment_button_shape"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:visibility="visible" />

</RelativeLayout>