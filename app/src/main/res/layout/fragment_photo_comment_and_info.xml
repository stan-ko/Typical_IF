<?xml version ="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff4e4e4e">



  <!--<ScrollView-->
      <!--android:layout_width="fill_parent"-->
      <!--android:layout_height="fill_parent">-->
  <!--</ScrollView>-->


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/listOfComments"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonSendComment"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Відпр."
        android:id="@+id/buttonSendComment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffaa66cc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_of_message_for_comment"
        android:textColor="#ff000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonSendComment"
        android:layout_alignTop="@+id/buttonSendComment"
        android:background="#ffffffff" />

</RelativeLayout>