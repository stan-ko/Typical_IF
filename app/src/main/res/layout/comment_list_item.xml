<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
   >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:paddingBottom="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Мельник Василь"
            android:id="@+id/user_name_textView"
            android:layout_weight="0.08"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_user_avatar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/img_user_avatar"
            android:src="@drawable/ic_launcher"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            android:layout_weight="0.34"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/user_name_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sdfsdf dasdf afs dfsa fsaf "
            android:id="@+id/user_comment_text"
            android:layout_toRightOf="@+id/img_user_avatar"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/user_name_textView" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postAudioLayout"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postDocumentLayout"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postAlbumLayout"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="#ffffffff"
                android:dividerPadding="5dp"
                android:divider="@drawable/copy_history_divider"
                android:showDividers="middle" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postMediaLayout"
                android:background="#ffffffff"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postWikiPageLayout"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postLinkLayout" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postPollLayout" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="8 лис 2014 в 22:16"
            android:id="@+id/text_date_of_comment"
            android:textColor="#78000000"
            android:layout_below="@+id/user_comment_text"
            android:layout_alignLeft="@+id/user_comment_text"
            android:layout_alignStart="@+id/user_comment_text"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/image_like_or_not_like"
            android:layout_alignBottom="@+id/img_user_avatar"
            android:layout_alignRight="@+id/user_comment_text"
            android:layout_alignEnd="@+id/user_comment_text" />

    </RelativeLayout>

</RelativeLayout>