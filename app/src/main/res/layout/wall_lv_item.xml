<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/abc_menu_dropdown_panel_holo_light">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/postParentLayout">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/postDateTitleLayout"
                android:padding="2dp"
                android:background="@android:drawable/editbox_background_normal">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:id="@+id/img_post_copy_or_spam"
                    android:background="@drawable/abc_ic_menu_moreoverflow_normal_holo_dark"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txt_post_date"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="3dp"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postSignedLayout" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/postTextLayout"></RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postAttachmentsLayout"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@android:drawable/editbox_background_normal">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/postMediaLayout"
                    android:background="#ffffffff" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/postAudioLayout"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/postDocumentLayout"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/postAlbumLayout"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="#ffffffff"
                    android:dividerPadding="5dp"
                    android:divider="@drawable/copy_history_divider"
                    android:showDividers="middle" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/postWikiPageLayout"
                    android:visibility="gone"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/postLinkLayout" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postGeoLayout"
                android:visibility="gone"
                android:padding="5dp"
                android:background="#ffffffff"></RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/copyHistoryLayout"
                android:background="@android:drawable/editbox_background_normal" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/postFeaturesLayout"
                android:visibility="visible"
                android:background="@android:drawable/editbox_background_normal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_post_comment"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:src="@drawable/abc_ic_voice_search_api_holo_light"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="67"
                    android:id="@+id/txt_post_comment"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_post_comment"
                    android:layout_toEndOf="@+id/img_post_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="123"
                    android:id="@+id/txt_post_like"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_post_like"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_post_like"
                    android:layout_toStartOf="@+id/txt_post_like"
                    android:src="@android:drawable/ic_menu_rotate"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="12"
                    android:id="@+id/txt_post_share"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/img_post_like"
                    android:layout_toStartOf="@+id/img_post_like"
                    android:layout_marginRight="15dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/img_post_share"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_post_share"
                    android:layout_toStartOf="@+id/txt_post_share"
                    android:src="@android:drawable/ic_menu_share"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>