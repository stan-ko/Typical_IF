<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/blur1">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/developers_layout"
            android:layout_toStartOf="@+id/tf_site"
            android:layout_below="@+id/DevLightBtn"
            android:layout_alignEnd="@+id/DevLightBtn"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="@color/textFadeOutColor"
                android:text="Developed by  "
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_alignLeft="@+id/textView10"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viktor Pavluchinsky"
                android:id="@+id/viktor_ref"
                android:layout_toEndOf="@+id/textView4"
                android:layout_alignTop="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:textColor="#ff797dff"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yurij Vasilkiv"
                android:id="@+id/yurij_ref"
                android:layout_toEndOf="@+id/textView4"
                android:textColor="#ff797dff"
                android:layout_below="@+id/vasil_ref"
                android:layout_toRightOf="@+id/textView4"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vasil Melnik"
                android:id="@+id/vasil_ref"
                android:layout_toEndOf="@+id/textView4"
                android:textColor="#ff797dff"
                android:layout_below="@+id/lyubomir_ref"
                android:layout_alignLeft="@+id/lyubomir_ref"
                android:layout_alignStart="@+id/lyubomir_ref"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lyubomir Melnik"
                android:id="@+id/lyubomir_ref"
                android:layout_toEndOf="@+id/textView4"
                android:textColor="#ff797dff"
                android:layout_below="@+id/viktor_ref"
                android:layout_toRightOf="@+id/textView4"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stanislav Koshutskyi"
                android:id="@+id/stas"
                android:layout_toEndOf="@+id/textView4"
                android:textColor="#ff797dff"
                android:layout_below="@+id/yurij_ref"
                android:layout_alignLeft="@+id/yurij_ref"
                android:layout_alignStart="@+id/yurij_ref"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http://devlight.com.ua"
                android:id="@+id/devlight_com_ua_ref"
                android:textColor="#ffffffff"
                android:layout_toEndOf="@+id/textView10"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit "
                android:id="@+id/textView10"
                android:textColor="@color/textFadeOutColor"
                android:layout_toEndOf="@+id/tf_site"
                android:layout_below="@+id/stas"
                android:layout_marginTop="25dp"
                android:paddingTop="1dp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DevLightBtn"
            android:adjustViewBounds="true"
            android:src="@drawable/devlightlogo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/stantsiya"
            android:background="@drawable/stantsiya_logo"
            android:layout_toEndOf="@+id/DevLightBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tf_site"
            android:src="@drawable/tf_white_logo"
            android:layout_above="@+id/stantsiya"
            android:layout_alignLeft="@+id/stantsiya"
            android:layout_alignStart="@+id/stantsiya" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/licences"
            android:layout_below="@+id/developers_layout"
            android:layout_alignLeft="@+id/stantsiya"
            android:layout_alignStart="@+id/stantsiya" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/libraries_info"
            android:id="@+id/go_to_license"
            android:textColor="#ff797dff"
            android:layout_toEndOf="@+id/stantsiya"
            android:layout_alignBottom="@+id/stantsiya"
            android:layout_alignLeft="@+id/devlight_com_ua_ref"
            android:layout_alignStart="@+id/devlight_com_ua_ref"
            android:layout_marginLeft="71dp"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>