<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/app_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_poll_title_preview"
        android:textColor="#f0ffffff"
        android:singleLine="true"
        android:textSize="14dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/img_poll_post_preview"
        android:layout_toRightOf="@+id/img_poll_post_preview"
        android:paddingRight="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_poll_post_preview"
        android:src="@drawable/survey_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/answers_anonymous_text_preview"
        android:textColor="#8cffffff"
        android:visibility="visible"
        android:paddingRight="10dp"
        android:layout_below="@+id/txt_poll_title_preview"
        android:layout_alignLeft="@+id/img_poll_post_preview"
        android:layout_alignStart="@+id/img_poll_post_preview"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:paddingBottom="20dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/answers_anonymous_text_preview"
        android:id="@+id/go_to_poll_details"
        android:background="@drawable/element_selector_v2"></RelativeLayout>

</RelativeLayout>