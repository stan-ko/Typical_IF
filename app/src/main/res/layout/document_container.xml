<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/element_selector"
    android:padding="5dp">

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:visibility="gone"
        android:indeterminate="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_document"
        android:clickable="false"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_attach_document"
        android:layout_margin="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_document_title"
        android:textStyle="normal"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/img_document"
        android:layout_toRightOf="@+id/img_document"
        android:layout_toEndOf="@+id/img_document"
        android:textSize="15dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_document_size"
        android:singleLine="true"
        android:textColor="#8cffffff"
        android:layout_below="@+id/txt_document_title"
        android:layout_toRightOf="@+id/img_document"
        android:layout_toEndOf="@+id/img_document"
        android:textSize="13dp"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_gif"
        android:visibility="gone"
        android:scaleType="center"
        android:adjustViewBounds="true" />

</RelativeLayout>