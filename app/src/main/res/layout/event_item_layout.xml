<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_item_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="false"
    android:layout_alignParentTop="true"
    android:background="@color/app_bg"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="8dp"
    card_view:cardBackgroundColor="@color/app_bg">

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/container_img_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <typical_if.android.view.ResizableImageView
                android:id="@+id/img_event_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>

            <Button
                android:id="@+id/bt_img_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/img_event_item"
                android:layout_alignParentTop="true"
                android:background="@color/transparent" />
        </RelativeLayout>

        <com.devspark.robototextview.widget.RobotoTextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wall_background"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/today_events"
            android:textColor="@color/ab_background"
            android:textSize="18dp"
            app:typeface="roboto_regular" />

        <LinearLayout
            android:id="@+id/fake_lv_today_event_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.devspark.robototextview.widget.RobotoTextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wall_background"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/station_events"
            android:textColor="@color/stantsiya_bg"
            android:textSize="18dp"
            app:typeface="roboto_regular" />

        <LinearLayout
            android:id="@+id/fake_lv_yesterday_event_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.devspark.robototextview.widget.RobotoTextView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wall_background"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/period_events"
            android:textColor="@color/ab_background"
            android:textSize="18dp"
            app:typeface="roboto_regular" />

        <LinearLayout
            android:id="@+id/fake_lv_period_event_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</android.support.v7.widget.CardView>
