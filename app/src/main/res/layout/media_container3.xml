<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight=".50">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_photo_3_1"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:visibility="gone"
                android:layout_alignRight="@+id/img_photo_3_1"
                android:layout_alignEnd="@+id/img_photo_3_1" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@android:drawable/ic_media_play"
                    android:background="#ff404040"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/slash_between_numbers"
                    android:background="#ff404040"
                    android:gravity="bottom|right"
                    android:textColor="#ffffffff"
                    android:textSize="18dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="8dp" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="22dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/txt_link_src"
                    android:background="#ff404040"
                    android:textColor="#ffffffff"
                    android:textSize="18dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:gravity="left"
                    android:paddingRight="8dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3_1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:layout_marginBottom="2dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_3_2"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:visibility="gone"
                        android:id="@+id/relativeLayout3" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView3"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@android:drawable/ic_media_play"
                            android:background="#ff404040"
                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView4"
                            android:background="#ff404040"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView7"
                            android:background="#ff404040"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_3_3"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/relativeLayout5"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/imageView5"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@android:drawable/ic_media_play"
                            android:background="#ff404040"
                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView10"
                            android:background="#ff404040"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView12"
                            android:background="#ff404040"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>