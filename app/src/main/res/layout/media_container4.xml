<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight=".50" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/linearLayout4_1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_weight=".50" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_4_1"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageView7"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_video_post_play"

                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView13"
                            android:background="@color/transparent"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView14"
                            android:background="@color/transparent"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".50" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_4_2"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignRight="@+id/img_photo_4_2"
                        android:layout_alignEnd="@+id/img_photo_4_2"
                        android:visibility="gone" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageView8"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_video_post_play"

                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView15"
                            android:background="@color/transparent"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView16"
                            android:background="@color/transparent"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".50" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4_2"
                android:visibility="visible" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50"
                    android:layout_marginBottom="2dp" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_4_3"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_alignRight="@+id/img_photo_4_3"
                        android:layout_alignEnd="@+id/img_photo_4_3" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageView37"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_video_post_play"

                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView17"
                            android:background="@color/transparent"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView18"
                            android:background="@color/transparent"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".50" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/img_photo_4_4"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_alignRight="@+id/img_photo_4_4"
                        android:layout_alignEnd="@+id/img_photo_4_4" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:id="@+id/imageView38"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_video_post_play"

                            android:padding="2dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView19"
                            android:background="@color/transparent"
                            android:gravity="bottom|right"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:paddingRight="8dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="22dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textView20"
                            android:background="@color/transparent"
                            android:textColor="#ffffffff"
                            android:textSize="18dp"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="8dp"
                            android:singleLine="true"
                            android:gravity="left"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>