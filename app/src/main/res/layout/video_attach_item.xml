<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/img_video_attach"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_video_attach_title"
        android:layout_alignBottom="@+id/img_video_attach"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:background="#ff4f4f4f"
        android:textColor="#ffeeeeee" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_video_attach_duration"
        android:padding="5dp"
        android:background="#ff4f4f4f"
        android:textColor="#ffeeeeee"
        android:layout_alignTop="@+id/img_video_attach"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>