<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/element_selector"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/img_link"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_left_link" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_title"
        android:layout_toEndOf="@+id/img_link"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txt_link_src"
        android:layout_alignStart="@+id/txt_link_src"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textStyle="normal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_src"
        android:layout_toEndOf="@+id/img_link"
        android:textColor="#8cf0f0f0"
        android:textSize="10dp"
        android:maxLines="1"
        android:textStyle="normal"
        android:layout_below="@+id/txt_link_title"
        android:layout_toRightOf="@+id/img_link"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="visible"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_description"
        android:padding="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/img_link"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginLeft="5dp" />
</RelativeLayout>