<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/element_selector"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_link"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_title"
        android:layout_toEndOf="@+id/img_link"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="5dp"
        android:maxLines="3"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txt_link_src"
        android:layout_alignStart="@+id/txt_link_src" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_src"
        android:layout_toEndOf="@+id/img_link"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:padding="5dp"
        android:textStyle="italic"
        android:maxLines="2"
        android:layout_below="@+id/txt_link_title"
        android:layout_toRightOf="@+id/img_link" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_link_description"
        android:padding="5dp"
        android:textSize="15dp"
        android:layout_below="@+id/img_link"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />
</RelativeLayout>